---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import FormattedDate from "../components/atoms/FormattedDate.astro";
import Footer from "../components/organisms/Footer.astro";
import Header from "../components/organisms/Header.astro";
import { Icon } from "astro-icon/components";

type Props = CollectionEntry<"blog">["data"];

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage = "/notfound-image.png",
  author,
  tags,
  category,
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={heroImage}
      author={author || "Anonymous"}
      tags={tags}
    />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }
      .hero-image {
        width: 100%;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }
      .prose {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
      }

      .title {
        display: flex;
        flex-direction: column;
        margin-bottom: 0;
        margin-top: 1rem;
        line-height: 1;
      }

      .title p {
        margin-bottom: 0;
      }

      .title div {
        display: flex;
        justify-content: space-between;
      }

      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }

      @media (max-width:720px) {
        .prose h1{
          font-size: 2rem;
        }

        .title div {
        flex-direction: column;
      }
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="prose">
          <h1>{title}</h1>

          <div class="hero-image">
            <div>
              Write on : <FormattedDate date={pubDate} />
              {
                updatedDate && (
                  <div class="last-updated-on">
                    Last updated on : <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
            <img width={1020} height={510} src={heroImage} alt={title} />
          </div>

          <div class="title">
            <p>
              <strong><Icon name="octicon:pencil-16" /></strong>
              {author || "Anonymous"}
            </p>
            <div>
              {
                category && (
                  <p>
                    <strong>
                      <Icon name="octicon:file-directory-16" />
                    </strong>
                    {category}
                  </p>
                )
              }
              {
                tags && (
                  <p>
                    <strong>
                      <Icon name="octicon:hash-24" />
                    </strong>
                    {tags.join(", ")}
                  </p>
                )
              }
            </div>
            <hr />
          </div>

          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
