---
import HomeFeed from "../molecules/HomeFeed.astro";
import ImageHeroCarousel from "../molecules/ImageHeroCarousel.astro";
import WidgetNavigation from "../molecules/WidgetNavigation.astro";
import WidgetPersonalitation from "../molecules/WidgetPersonalization.astro";
---

<main>
  <ImageHeroCarousel />
  <div class="grid-container">
    <div></div>
    <HomeFeed />
    <div class="sidebar">
      <WidgetNavigation />
      <WidgetPersonalitation />
    </div>
  </div>
</main>

<style>
  main {
    padding: 3rem 2rem;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .grid-container {
    display: grid;
    grid-template-columns: 5% auto 30%;
    gap: 1rem;
  }

  .sidebar{
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  @media (max-width: 720px) {
    .grid-container {
      display: block;
      margin: 1rem 0;
    }
    main {
      padding: 3rem 1rem;
    }
  }
</style>
