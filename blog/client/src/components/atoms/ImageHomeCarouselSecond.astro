---
import { Image } from "astro:assets";
import FormattedDate from "./FormattedDate.astro";

export interface Props {
  link:string;
  title:string;
  imageSrc:string;
  description: string;
  date: string;  
}

const {date, description, imageSrc, link, title} = Astro.props
---

<figure>
  <a href={link}>
    <Image
      inferSize
      alt={`Gambar ${title}`}
      src={imageSrc}
    />
  </a>
  <a href={link}>
    <figcaption>{title}</figcaption>
  </a>
  <p class="description">
    {description}
  </p>
  <p class="date"><FormattedDate date={new Date(date)} ></p>
  <a href={link}>
    <button class="read-more">Lanjut Baca </button>
  </a>
</figure>

<style>
  figure {
    background-color: var(--primary-background);
    height: 100%;
    max-height: 460px;
    padding: 1rem;
    border-radius: 1rem;
    width: 100%;
  }

  img {
    transition: 200ms;
    width: 100%;
    max-height: 180px;
    object-fit: cover;
    height: auto;
    border-radius: 1rem;
  }

  img:hover {
    filter: brightness(110%);
  }

  a {
    color: var(--link-primary);
    text-decoration: none;
    transition: 200ms;
    font-weight: bold;
  }

  a:hover {
    color: var(--link-hover);
  }

  .description {
    display: -webkit-box;
    text-align: justify;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    font-size: large;
    overflow: hidden;
    color: var(--article-text)
  }

  .date {
    font-size: medium;
    color: var(--secondary-text);
  }

  .read-more {
    display: inline-block;
    background-color: #3b82f6; /* Warna biru */
    color: white;
    border: none;
    padding: 10px 16px;
    font-size: 1rem;
    font-weight: bold;
    text-transform: uppercase;
    border-radius: 6px;
    cursor: pointer;
    transition:
      background-color 0.3s ease,
      transform 0.2s ease;
  }

  .read-more:hover {
    background-color: #2563eb; /* Warna biru lebih gelap saat hover */
    transform: scale(1.05);
  }

  .read-more:active {
    background-color: #1d4ed8;
    transform: scale(1);
  }

  @media (max-width: 876px) {
    figure{
        height: auto;
        width: auto;
    }

    figcaption{
      display : -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .read-more {
      display: none;
    }
  }
</style>
