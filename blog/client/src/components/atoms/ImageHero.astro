---
import { Image } from "astro:assets";
import FormattedDate from "./FormattedDate.astro";

export interface Props {
  pubDate: Date;
  updatedDate?: Date;
  heroImage: string;
  title: string;
  captHeroImage?: string;
}

const { heroImage, pubDate, title, updatedDate, captHeroImage } = Astro.props;
---

<div class="hero-image">
  <div>
    <p class="write-on">
      Write on : <FormattedDate date={pubDate} />
    </p>
    {
      updatedDate && (
        <div class="last-updated-on">
          Last updated on : <FormattedDate date={updatedDate} />
        </div>
      )
    }
  </div>
  <figure>
    <Image width={1020} height={510} src={heroImage} alt={title} />
    <figcaption>{captHeroImage || "Image belum diberi caption"}</figcaption>
  </figure>
</div>

<style>
  .write-on,
.last-updated-on {
  text-align: center;
  font-size: 0.9rem;
  color: var(--text-secondary);
  margin: 0.5rem 0;
}

.hero-image {
  width: 100%;
  text-align: center;
  margin: 1.5rem 0;
}

.hero-image figure {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hero-image img {
  display: block;
  max-width: 100%;
  height: auto;
  border-radius: 12px;
  object-fit: cover;
  box-shadow: var(--box-shadow);
}

.hero-image figcaption {
  font-size: 0.85rem;
  color: var(--text-secondary);
  margin-top: 0.5rem;
  font-style: italic;
  text-align: center;
  max-width: 80%;
}

</style>
