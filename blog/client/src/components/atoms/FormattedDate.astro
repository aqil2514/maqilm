---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<!-- TODO : Nanti ini ubah agar bisa dipakek element time yang dari home -->
<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString('id-ID', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
