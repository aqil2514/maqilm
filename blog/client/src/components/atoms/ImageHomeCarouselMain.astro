---
import { Image } from "astro:assets";
import FormattedDate from "./FormattedDate.astro";

export interface Props {
  alt: string;
  src: string;
  label: string;
  title: string;
  pubDate: Date;
  author: string;
  link: string;
}

const { alt, author, label, pubDate, src, title, link } = Astro.props;
---

<a href={link}>
  <figure>
    <Image inferSize alt={alt} src={src} />
    <div>
      <p>{label}</p>
      <p>{title}</p>
      <p>{author} - <span><FormattedDate date={pubDate} /></span></p>
    </div>
  </figure>

  <style>
    figure {
      position: relative;
      display: block;
      overflow: hidden;
      border-radius: 1rem;
      height: 100%;
    }

    figure::after {
      content: "";
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0.5;
      background: linear-gradient(45deg, #84e88f, #045500);
      z-index: 1;
    }

    figure:hover img {
      transform: scale(1.1);
    }

    img {
      width: 100%;
      height: auto;
      transition: 200ms;
    }

    div {
      position: absolute;
      display: grid;
      grid-template-rows: 1fr 1fr 1fr;
      gap: 0.3 rem;
      bottom: 0;
      left: 0;
      width: 100%;
      padding: 0.5rem;
      z-index: 2;
      background-color: #0000004f;
    }

    p:first-child {
      text-transform: uppercase;
      color: #fff;
      font-weight: 400;
    }

    p:nth-child(2) {
      color: #fff;
      font-size: 1.2rem;
      font-weight: bold;
      line-height: 1.1;
      display: -webkit-box;
      -webkit-line-clamp: 1;
      -webkit-box-orient: vertical;
      overflow: hidden; /* Menghindari pemangkasan terlalu ketat */
    }

    p:last-child {
      color: #fff;
      font-size: medium;
    }
  </style>
</a>
