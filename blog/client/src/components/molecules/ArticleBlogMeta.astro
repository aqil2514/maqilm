---
import { Icon } from "astro-icon/components";

export interface Props {
  author: string;
  category?: string;
  tags?: string[];
}

const { author, category, tags } = Astro.props;
---

<div class="meta-article">
  <p>
    <strong><Icon name="octicon:pencil-16" /></strong>
    {author || "Anonymous"}
  </p>
  <div>
    {
      category && (
        <p>
          <strong>
            <Icon name="octicon:file-directory-16" />
          </strong>
          {category}
        </p>
      )
    }
    {
      tags && (
        <p>
          <strong>
            <Icon name="octicon:hash-24" />
          </strong>
          {tags.join(", ")}
        </p>
      )
    }
  </div>
  <hr />
</div>

<style>
  .meta-article {
    display: flex;
    flex-direction: column;
    line-height: 1;
    gap: 1rem;
    margin-top: 3rem;
  }

  .meta-article p {
    margin-bottom: 0;
    display: flex;
    gap: 0.5rem;
  }

  .meta-article div {
    display: flex;
    justify-content: space-between;
  }

  hr {
    width: 100%;
    height: 2px;
    background: gray;
    margin-top: 1rem;
  }

  @media (max-width: 720px) {
    .meta-article div {
      flex-direction: column;
    }
  }
</style>
