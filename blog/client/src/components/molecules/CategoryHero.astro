---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

const collections = await getCollection("blog");
const posts = collections.slice(0, 5);
---

<div class="hero">
  <swiper-container
  loop="true"
  pagination="true"
  navigation="true"
  autoplay='{"delay": 3000, "pauseOnMouseEnter": true}'
  >
    {
      posts.map((post) => {
        return (
          <swiper-slide style={`background:url(${post.data.heroImage})`}>
            <figure>
              <Image
                src={post.data.heroImage as string}
                inferSize
                alt={post.data.title}
              />
              <div>
                <figcaption>{post.data.title}</figcaption>
                <p class="description">{post.data.description}</p>
                <a href={`/blog/${post.id}`}>Baca Artikel &gt;&gt;</a>
              </div>
            </figure>
          </swiper-slide>
        );
      })
    }
  </swiper-container>

  <script
    src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"
  ></script>
</div>

<style>
  .hero {
    width: 100%;
    max-width: 1200px; /* Batasi ukuran maksimum */
    margin: 1rem auto 2rem;
    background-color: black;
    padding: 1rem;
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden; /* Agar gambar tidak keluar dari area */
  }

  swiper-container {
    width: 100%;
    height: 100%;
  }

  swiper-slide {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: white;
    padding: 1rem;
    background-position: center !important;
    background-repeat: no-repeat !important;
    background-size: cover !important;
    border-radius: 0.5rem;
    overflow: hidden;
    position: relative;
    height: auto;
  }

  swiper-slide::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.3); /* Overlay agar teks tetap terbaca */
  }

  swiper-slide figure {
    width: 100%;
    max-width: 1000px; /* Maksimum ukuran konten */
    display: flex;
    flex-wrap: wrap; /* Agar responsif di layar kecil */
    gap: 1rem;
    align-items: center;
    justify-content: center;
    border-radius: 0.5rem;
    overflow: hidden;
    position: relative;
    text-align: center;
    padding: 1rem;
  }

  swiper-slide figure img {
    width: 100%;
    max-width: 300px; /* Ukuran maksimum untuk gambar */
    height: auto;
    object-fit: cover;
    border-radius: 0.5rem;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease-in-out;
  }

  swiper-slide figure img:hover {
    transform: scale(1.05);
  }

  swiper-slide figure div {
    flex: 1;
    max-width: 500px; /* Batasi lebar teks */
    text-align: left;
  }

  swiper-slide figure figcaption {
    font-family: cursive, sans-serif;
    font-size: 1.5rem;
    font-weight: bold;
  }

  swiper-slide figure p {
    font-size: 1rem;
    margin: 1rem 0;
    text-align: justify;
    padding-right: 2rem;
  }

  swiper-slide figure a {
    color: white;
    text-decoration: none;
    font-weight: bold;
    border: 2px solid white;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    transition: background 0.3s ease-in-out;
  }

  swiper-slide figure a:hover {
    background: white;
    color: black;
  }

  /* ðŸ“± MEDIA QUERY UNTUK LAYAR KECIL */
  @media (max-width: 768px) {
    .hero {
      padding: 0.5rem;
    }

    swiper-slide figure {
      flex-direction: column;
      text-align: center;
    }

    swiper-slide figure img {
      max-width: 100%;
      height: auto;
    }

    swiper-slide figure div {
      max-width: 100%;
      padding: 0 1rem;
    }

    swiper-slide figure p {
      padding: 0;
    }
  }
</style>
