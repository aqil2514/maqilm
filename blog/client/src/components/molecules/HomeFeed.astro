<style>
 div {
  width: 100%;
  height: 1280px;
  padding: 4rem 2rem; /* Tambah padding horizontal untuk ruang lebih */
  overflow-y: auto; /* Pastikan scroll hanya muncul jika dibutuhkan */
  background: linear-gradient(to bottom, #ffffff, #f8f9fa); /* Subtle gradient */
  border-radius: 12px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease-in-out;
  scroll-behavior: smooth;
}

/* Styling untuk scrollbar agar lebih halus */
div::-webkit-scrollbar {
  width: 10px;
}

div::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 10px;
}

div::-webkit-scrollbar-thumb {
  background: #bbb;
  border-radius: 10px;
  transition: background 0.3s ease;
}

div::-webkit-scrollbar-thumb:hover {
  background: #888;
}

</style>
