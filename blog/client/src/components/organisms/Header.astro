---
import "@fontsource-variable/montserrat";

import LinkHeader from "../atoms/LinkHeader.astro";
import { SITE_TITLE } from "../../consts";
---

<header>
  <nav>
    <div class="site-title" id="site-title">
      <a href="/">{SITE_TITLE}</a>
    </div>
    <div class="internal-links">
      <LinkHeader href="/">Home</LinkHeader>
      <LinkHeader href="/blog">Blog</LinkHeader>
      <LinkHeader href="/about">About</LinkHeader>
    </div>
  </nav>
</header>

<style>
  header {
    width: 100%;
    height: 4rem;
    background-color: var(--header-background);
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  nav {
    width: 90%;
    max-width: 1200px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .site-title a {
    font-size: 1.5rem;
    font-weight: bold;
    font-family: "Montserrat Variable", sans-serif;
    text-decoration: none;
    color: var(--primary-text);
  }

  .internal-links {
    display: flex;
    gap: 1.5rem;
  }

  .internal-links a {
    font-family: "Montserrat Variable", sans-serif;
    font-size: 1rem;
    text-decoration: none;
    color: var(--link-stand-1);
    transition: color 0.2s ease-in-out;
  }

  .internal-links a:hover {
    color: var(--link-hover-2);
    font-weight: bold;
  }

  @media (max-width: 720px){
    .site-title a{
      font-size: 16px !important;
    }
  }
</style>
